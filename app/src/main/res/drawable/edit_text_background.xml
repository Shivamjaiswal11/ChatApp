        >
        <shape>
            <solid
                android:color="@color/white">
            </solid>

            <corners android:radius="1dp" />

            <padding
                android:bottom="10dp"
                android:left="0dp"
                android:right="0dp"
                android:top="10dp" />
            <stroke
                android:width="2dp"
                android:color="#cccccc"/>
        </shape>
    </item>
</selector>